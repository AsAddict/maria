{:source-paths ["src"
                "test"]
 :dependencies [[org.clojure/core.match "0.3.0-alpha4"]
                [com.cognitect/transit-cljs "0.8.239"]
                [com.cognitect/transit-clj "0.8.300"]
                [com.lucasbradstreet/cljs-uuid-utils "1.0.2"]
                [org.clojure/data.json "0.2.6"]

                [fast-zip "0.7.0"]

                [maria/friendly "0.1.0"]
                [maria/shapes "0.1.0"]

                [re-view "0.4.0"]
                [re-view/prosemirror "0.2.1-SNAPSHOT"]

                [lark/tools "0.1.1"]
                [lark/cells "0.1.5"]
                [cljs-live "0.3.0"]]

 :nrepl        {:port 7888}

 :builds
               {:tests
                {:target     :browser
                 :output-dir "test-target/public/js"
                 :asset-path "js"
                 :modules    {:tests {:entries [maria-tests.runner]}}
                 :devtools   {:after-load maria-tests.runner/run-tests}}

                :live
                {:target           :browser
                 :compiler-options {:optimizations :simple}
                 :output-dir       "resources/public/js/compiled"
                 :asset-path       "/js/compiled"
                 :modules          {:shadow-live {:entries [#_shadow-init.init
                                                            maria.frames.live-frame]}}
                 :devtools         {:http-root    "resources/public"
                                    :http-handler shadow.http.push-state/handle
                                    :http-port    8701
                                    :after-load   maria.frames.live-frame/render}
                 :js-options       {:resolve {"codemirror"  {:target :global
                                                             :global "CodeMirror"}}}}
                :bootstrap
                {:target     :bootstrap
                 :output-dir "resources/public/js/bootstrap"
                 :entries    [maria.user
                              cljs.spec.alpha]
                 :exclude    [cljs.js]
                 :js-options {:resolve {"codemirror"  {:target :global
                                                       :global "CodeMirror"}}}}
                :trusted
                {:target        :browser
                 :output-dir    "resources/public/js/compiled"
                 :asset-path    "/js/compiled"
                 :optimizations :simple
                 :modules       {:shadow-trusted {:entries [maria.frames.trusted-frame]}}
                 :devtools      {:autoload true}
                 :compiler-options
                                {:externs ["node_modules/firebase/externs/firebase-app-externs.js"
                                           "node_modules/firebase/externs/firebase-auth-externs.js"
                                           "externs/react.ext.js"
                                           "externs/reactDom.ext.js"]}}}}