@import "vendor/et-book.styl"
@import "vendor/tachyons.styl"
@import "vendor/codemirror.styl"
@import "vendor/theme/solarized.styl"

html, body, #maria-main
  height 100%
.serif
  font-family "et-book", Georgia, Times New Roman, serif
div.CodeMirror
  height 100%

  pre
    padding 0
  span.CodeMirror-matchingbracket
    font-weight bold
    color black
    cursor pointer
  .CodeMirror-evalRegion
    background rgba(0,0,0,0.1)
  .cm-comment
    color #a27b11
    font-family 'et book', Georgia, Times New Roman, serif
    font-size 15px
.CodeMirror, .code, code, pre
  font-family 'Source Code Pro', monospace
  font-size 14px
.CodeMirror
  background transparent  !important
  box-shadow none !important
  text-shadow none !important
  padding: 0 1rem;
.bg-solarized-light
  background #fdf6e3
  box-shadow  inset 0px 0 2px 0px rgba(172, 126, 0, 0.36)
.CodeMirror-eval-highlight
  background rgba(0,0,0,0.07)
  cursor pointer
.ws-prewrap
  white-space pre-wrap
.f7
  font-size 0.75rem